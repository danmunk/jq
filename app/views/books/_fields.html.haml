
- form_for @book do |f|
  = f.error_messages

  %fieldset
    .row
      .field
        = f.label :title
        = f.text_field :title
      .field
        = f.label :author
        = f.text_field :author
    .row
      .field
        = f.label :description
        = f.text_area :description
  = f.submit "Save", :id => "save"
  or
  = link_to "Cancel", books_path
  - unless @book.new_record?
    |
    = link_to "Delete", @book, :method => :delete
